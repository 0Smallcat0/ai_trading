# AI 股票自動交易系統 - 環境變數模板
# AI Stock Automated Trading System - Environment Variables Template

# 環境設定 / Environment Settings
ENV=dev  # dev, test, prod

# 資料庫設定 / Database Settings
DB_URL=sqlite:///data/market_data.db
MARKET_INFO_DB=data/market_info.db

# API 設定 / API Settings
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# 日誌設定 / Log Settings
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 應用設定 / Application Settings
APP_NAME=trading_system
APP_VERSION=1.0.0
APP_ENVIRONMENT=production

# 交易設定 / Trading Settings
TRADING_HOURS_START=09:00:00
TRADING_HOURS_END=13:30:00
MAX_POSITION_SIZE=0.2  # 最大持倉比例 / Maximum position size
STOP_LOSS_THRESHOLD=0.05  # 停損閾值 / Stop loss threshold

# 爬蟲設定 / Crawler Settings
REQUEST_TIMEOUT=30  # 請求超時時間（秒）/ Request timeout (seconds)
RETRY_COUNT=3  # 重試次數 / Retry count

# 監控設定 / Monitoring Settings
PRICE_ANOMALY_THRESHOLD=0.05  # 價格異常閾值 / Price anomaly threshold
VOLUME_ANOMALY_THRESHOLD=3.0  # 成交量異常閾值 / Volume anomaly threshold
CHECK_INTERVAL=60  # 檢查間隔（秒）/ Check interval (seconds)

# Grafana 設定 / Grafana Settings
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin  # 請修改此預設密碼 / Please change this default password

# 警報設定 / Alert Settings
ALERT_LOG_DIR=logs/alerts
ALERT_CHECK_INTERVAL=60

# 電子郵件設定 / Email Settings
ALERT_EMAIL_FROM=alerts@example.com
ALERT_EMAIL_TO=admin@example.com
SMTP_SERVER=localhost
SMTP_PORT=25
SMTP_USE_TLS=False
SMTP_USERNAME=
SMTP_PASSWORD=

# 券商設定 / Broker Settings
BROKER_NAME=simulator  # 預設使用模擬交易 / Default to simulator
BROKER_API_KEY_PASSWORD=

# 其他設定 / Other Settings
DEBUG_MODE=False  # True, False

# 注意：請複製此檔案為 .env.{環境} 並填入您的實際設定值
# Note: Please copy this file to .env.{environment} and fill in your actual settings
